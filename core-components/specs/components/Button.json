{
  "name": "Button",
  "category": "utility",
  "description": "Interactive element that triggers an action",
  "props": {
    "label": { "type": "string", "required": true },
    "variant": { "type": "enum", "values": ["primary", "secondary", "danger", "ghost"] },
    "size": { "type": "enum", "values": ["small", "medium", "large"] },
    "disabled": { "type": "boolean", "default": false },
    "icon": { "type": "string" },
    "onClick": { "type": "function" }
  },
  "events": ["onClick"],
  "accessibility": ["aria-label", "role"],
  "slots": ["default", "icon"],
  "styleHooks": { "bg": "color.primary", "fg": "color.onPrimary" },
  "version": "0.1.0"
}
