{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Core Component Specification",
  "type": "object",
  "required": ["name", "category", "props"],
  "properties": {
    "name": { "type": "string" },
    "category": { "type": "string", "enum": ["form", "layout", "navigation", "display", "utility"] },
    "description": { "type": "string" },
    "props": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["string", "number", "boolean", "enum", "array", "object", "function"] },
          "required": { "type": "boolean" },
          "default": {},
          "values": { "type": "array", "items": {} },
          "description": { "type": "string" }
        },
        "required": ["type"]
      }
    },
    "events": { "type": "array", "items": { "type": "string" } },
    "accessibility": { "type": "array", "items": { "type": "string" } },
    "slots": { "type": "array", "items": { "type": "string" } },
    "styleHooks": { "type": "object", "additionalProperties": { "type": "string" } },
    "version": { "type": "string" }
  },
  "additionalProperties": false
}
